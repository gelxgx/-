/* pages/index/index.wxss */
.index-page{
  height:100vh;
  /* background: url('//yitian.happyhao.top/assets/index-bg.png') no-repeat; */
  background-size:100% 100%;
  display:flex;
   align-items:center;
   justify-content: center;
}
.index-bg {
  height: 100vh;
  width: 100vw;
}
.index-logo {
  width: 104rpx;
  height: 228rpx;
  position: absolute;
  top: 90rpx;
  left: 20rpx;
}
.index-button-group{
   height:calc(100vh - 600rpx);
   display:flex;
   align-items:center;
   flex-direction: column;
   padding-top:150rpx;
   box-sizing:border-box;
   position: absolute;
   top: 572rpx;
}
.index-button-group .btn{
   width:350rpx;
   height:95rpx;
   border-radius:10rpx;
   display:flex;
   justify-content:center;
   align-items:center;
}

.index-button-group .btn:first-child{
  margin-bottom: 46rpx;
}

.index-button-group .btn image.icon-1{
  width: 248rpx;
  height: 80rpx;
   margin-right:29rpx;
}
.index-button-group .btn image.icon-2{
  width: 248rpx;
  height: 80rpx;
  margin-right:29rpx;
}
.index-button-group .btn image.text-image{
   width:123rpx;
   height:30rpx;
}